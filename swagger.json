      "get": {
        "summary": "Get all coches from a concesionario especified by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "ObjectId or index",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Fetch all coches from concesionario",
